<div class="container">
  <div class="row">
    <% @ab_tests.each do |ab_test| %>
      <div class="col-3">
        <div class="white-card">
          <h1><%= ab_test.name %> </h1>

          <div class="test-links">
            <%= link_to ab_test_path(ab_test) do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_ab_test_path(ab_test) do %>
              <i class="fas fa-edit"></i>
            <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


